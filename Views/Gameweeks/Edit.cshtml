@model RestoreFootball.Models.Gameweek

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">
<link href="~/css/signup.css" rel="stylesheet" />
<script src="~/js/gameweek.js"></script>

<h1>Edit</h1>

<h4>Gameweek</h4>
<hr />
<form class="bordered-container">
    <label for="GreenScore">Green Score:</label>
    <input type="number" id="GreenScore" name="GreenScore"><br><br>

    <label for="NonBibsScore">NonBibs Score:</label>
    <input type="number" id="NonBibsScore" name="NonBibsScore"><br><br>

    <label for="YellowScore">Yellow Score:</label>
    <input type="number" id="YellowScore" name="YellowScore"><br><br>

    <label for="OrangeScore">Orange Score:</label>
    <input type="number" id="OrangeScore" name="OrangeScore"><br><br>

    <label for="dropdown">Groupings:</label>

    <div id="groupings">
        @foreach (var grouping in Model.Groupings)
        {
            <div class="grouping bordered-container">
                @foreach(var gameweekPlayer in grouping.GameweekPlayers)
                {
                    <p>@gameweekPlayer.Player.FirstName @gameweekPlayer.Player.LastName</p>
                    <button><i class="actionIcon fas fa-trash-alt"></i></button>
                }
            </div>
        }
        <button onclick="addGrouping()">Add Grouping</button>
    </div>

</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
